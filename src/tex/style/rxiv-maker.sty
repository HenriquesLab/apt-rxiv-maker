% Rxiv-Maker LaTeX Style Package
% A modern style package for scientific article generation

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{rxiv-maker}[2024/08/19 v1.5.18 Rxiv-Maker Style Package]

% Required packages
\RequirePackage{xcolor}
\RequirePackage{graphicx}
\RequirePackage{amsmath}
\RequirePackage{amsfonts}
\RequirePackage{amssymb}
\RequirePackage{geometry}
\RequirePackage{fancyhdr}
\RequirePackage{booktabs}
\RequirePackage{caption}
\RequirePackage{subcaption}
\RequirePackage{hyperref}
\RequirePackage{cleveref}

% Page geometry
\geometry{
    margin=1in,
    top=1.2in,
    bottom=1.2in
}

% Colors
\definecolor{rxivblue}{RGB}{0, 102, 204}
\definecolor{rxivgray}{RGB}{102, 102, 102}

% Header and footer
\pagestyle{fancy}
\fancyhf{}
\fancyhead[C]{\small\textcolor{rxivgray}{\leftmark}}
\fancyfoot[C]{\small\textcolor{rxivgray}{\thepage}}
\renewcommand{\headrulewidth}{0.4pt}
\renewcommand{\footrulewidth}{0pt}

% Caption formatting
\captionsetup{
    labelfont={bf,color=rxivblue},
    textfont={small},
    margin=1em
}

% Section formatting
\renewcommand{\section}{\@startsection{section}{1}{\z@}%
    {-3.5ex \@plus -1ex \@minus -.2ex}%
    {2.3ex \@plus.2ex}%
    {\normalfont\Large\bfseries\color{rxivblue}}}

% Hyperref setup
\hypersetup{
    colorlinks=true,
    linkcolor=rxivblue,
    filecolor=rxivblue,
    urlcolor=rxivblue,
    citecolor=rxivblue
}

% Math environments
\newenvironment{proof}[1][\proofname]{\par
  \pushQED{\qed}%
  \normalfont \topsep6\p@\@plus6\p@\relax
  \trivlist
  \item[\hskip\labelsep
        \itshape
    #1\@addpunct{.}]\ignorespaces
}{%
  \popQED\endtrivlist\@endpefalse
}

% Custom commands
\newcommand{\rxivversion}{1.5.18}
\newcommand{\rxivtitle}[1]{\title{\textcolor{rxivblue}{#1}}}

\endinput